{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "build",
        "command": "/usr/bin/ninja",
        "args": ["-j8"],
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },

      {
        "type": "shell",
        "label": "build_target",
        "command": "/usr/bin/ninja",
        "args": ["-j8", "${relativeFileDirname}/${fileBasenameNoExtension}"],
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }